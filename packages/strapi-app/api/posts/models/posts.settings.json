{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Posts"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "slug": {
      "type": "uid"
    },
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "tags": {
      "type": "enumeration",
      "enum": [
        "announcement",
        "update",
        "library"
      ]
    },
    "creation_date": {
      "type": "datetime"
    },
    "hero": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
